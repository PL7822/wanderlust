<%layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3> Edit a listing </h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label"> Title  </label>
                    <input type="text" class="form-control" id="title" name="Listing[title]" required value="<%= listing.title %>">
                <div class="valid-feedback"> Title looks good! </div>
                <div class="invalid-feedback"> Please enter a valid Title </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label"> Description  </label>
                    <textarea id="description" class="form-control"
                        name="Listing[description]" required><%=listing.description %></textarea>
                <div class="invalid-feedback"> Please enter a short Description </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label  for="price" class="form-label"> Price (in INR)  </label>
                        <input type="number" class="form-control" id="price" required name="Listing[price]" value="<%= listing.price %>">
                    <div class="invalid-feedback"> Please enter a valid Price </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label"> Country : </label>
                        <input type="text" class="form-control" required id="country" name="Listing[country]"
                            value="<%= listing.country %>">
                    </div>
                </div>

                <div class="mb-3">
                    Original Listing Image <br> 
                    <img src="<%= originalImageUrl %>"/>
                </div>

                <div class="mb-3">
                    <label for="imageUrl" class="form-label"en> Uplod New Image  </label>
                    <input type="file" class="form-control" required id="imageUrl" name="Listing[image]"
                       >
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label"> Location  </label>
                    <input type="text" required class="form-control" id="location" name="Listing[location]"
                        value="<%= listing.location %>" >
                    <div class="invalid-feedback"> Please enter a valid Location </div>
                </div>

                <div class="mb-3">
                    <label for="Contact" class="form-label"> Contact  </label>
                    <input type="text" class="form-control" id="contact" name="Listing[contact]" value="<%= listing.contact %>">
                <div class="valid-feedback"> Contact not compulsory. </div>
                </div>

                <button type="submit" class="btn btn-dark edit-btn mt-3"> Update Listing </button>
            </form>
        </div>
    </div>